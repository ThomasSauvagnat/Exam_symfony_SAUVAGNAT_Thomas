{% extends 'base.html.twig' %}

{% block title %}Détails d'un produit{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Détails</h1>
            <h2>{{product.name}}</h2>
            <p>Date de création : {{product.createdAt|date('d/m/Y') }}</p>
            <p>Actif : {{product.isActive }}</p>
            <p>Lien de l'image : {{product.imagePath }}</p>
            <p>Créateur : {{product.createdBy.email }}</p>
            <a href="{{ path('app_products') }}"><button class="btn btn-secondary">Retour</button></a>
        </div>
    </div>
{% endblock %}
