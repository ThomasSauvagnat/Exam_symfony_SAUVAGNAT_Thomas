{% extends 'base.html.twig' %}

{% block title %}Ajout d'un produit{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ form_start(form) }}
                {{form_row(form.name)}}
                {{form_row(form.imagePath)}}
            <button type="submit" class="btn btn-secondary">Ajouter le produit</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
